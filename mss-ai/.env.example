# DynamoDB (LocalStack para desenvolvimento local)
DYNAMODB_ENDPOINT_URL=http://localhost:4566

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# OpenSearch (Standalone)
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_HOSTS=["http://localhost:9200"]
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false

# VLM Models
# Estratégia: Intel INT8 Quantization (4-5GB RAM, boa qualidade)
VLM_MODEL_NAME=Salesforce/blip2-opt-2.7b
VLM_MODEL_CACHE_DIR=./models
EMBEDDING_MODEL_NAME=sentence-transformers/clip-ViT-B-32

# Intel INT8 Quantization (otimizado para CPU)
# RAM: ~4-5GB (vs 15GB sem quantização)
# Qualidade: 90-95% do modelo completo
USE_QUANTIZATION=true
DEVICE=cpu

# Processing
MAX_IMAGE_SIZE=1024
MAX_FILE_SIZE_MB=50
CACHE_TTL=3600

# Validation
FUZZY_MATCH_THRESHOLD=80
